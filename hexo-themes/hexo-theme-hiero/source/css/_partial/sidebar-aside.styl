#sidebar
  padding-left: 12px
  @media mq-normal
    column(sidebar-column)
  @media mq-mobile
    display: none

.widget-wrap
  margin: 30px 0

.widget-title
  @extend $block-caption
  letter-spacing: 0px
  color: #222

.widget
  color: color-sidebar-text
  background: transparent
  border-width: 1px 0 0 0
  border-style: solid;
  border-color: color-widget-border
  a
    color: #555
    text-decoration: none
    &:hover
      color: color-link-hover
      text-decoration: none
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc

.widget_athemes_tabs .widget
  border-width: 0
  ul
    background: #f6f6f6;
    border: 1px solid #e6e6e6;
    li
      margin: 0;
      padding: 10px;
      a
        margin: 0;
        font-size: 1.3em;
        text-transform: uppercase;
        line-height: 1.2;
        color: #222;
        font-weight: 700;
        font-family: font-yanone
        &:hover
          color: color-red